            --pico-form-element-spacing-horizontal: 1rem;
        }
        code, pre, kbd {
            font-family: 'Fira Code', monospace;
        }
        [data-theme="light"], :root:not([data-theme="dark"]) {
            --pico-primary: #163c52;
            --pico-primary-hover: #1f5472;
